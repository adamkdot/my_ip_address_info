<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/diagnostics_result_row_vertical_padding"
    android:paddingEnd="@dimen/diagnostics_result_row_horizontal_padding"
    android:paddingLeft="@dimen/diagnostics_result_row_horizontal_padding"
    android:paddingRight="@dimen/diagnostics_result_row_horizontal_padding"
    android:paddingStart="@dimen/diagnostics_result_row_horizontal_padding"
    android:paddingTop="@dimen/diagnostics_result_row_vertical_padding"
    android:background="@color/background_color_white" >

    <TextView
            android:id="@+id/network_diagnostics_result_row_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/dark_text_color" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/network_diagnostics_result_row_title"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/subtitle_color" />

        <TextView
            android:id="@+id/network_diagnostics_result_row_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/dark_text_color" />
        
	</LinearLayout>

    <TextView
           android:id="@+id/network_diagnostics_result_row_summary"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/dark_text_color" />

       <TextView
           android:id="@+id/network_diagnostics_result_row_expected_length"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/dark_text_color" />
       
       <TextView
           android:id="@+id/network_diagnostics_result_row_actual_length"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/dark_text_color" />

</LinearLayout>
