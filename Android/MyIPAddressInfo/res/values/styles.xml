<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>
    <color name="background_color">#848482</color>
    <color name="background_color_dark">#3D3C3A</color>
    <color name="background_color_light">#A4A4A2</color>
    <color name="heading_color_1">#FFD4A3</color>
    <color name="heading_color_2">#0C435A</color>
    <color name="heading_color_3">#D36247</color>
    <color name="heading_color_4">#09672F</color>
    <color name="heading_color_5">#F5B873</color>
    <color name="light_text_color">#E5E4E2</color>
    <color name="dark_text_color">#1D1C1A</color>
    <color name="dark_text_hint_color">#5D5C5A</color>
    <dimen name="heading_padding">10dp</dimen>
    <dimen name="label_value_padding">5dp</dimen>
    
    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/light_text_color</item>
        <item name="strokeColor">@color/background_color_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">6dp</item>
        <item name="centered">true</item>
    </style>
    
</resources>
